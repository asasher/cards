{
  "name": "cards",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=web --ui=tui",
    "dev:with-logs": "turbo run dev:with-logs --filter=web",
    "gateway:up": "turbo run gateway:up --filter=web",
    "build": "turbo run build --filter=web",
    "typecheck": "turbo run typecheck --filter=web",
    "lint": "turbo run lint --filter=web",
    "lint:fix": "turbo run lint:fix --filter=web",
    "format": "turbo run format --filter=web",
    "format:fix": "turbo run format:fix --filter=web",
    "check": "turbo run check --filter=web",
    "db:up": "turbo run db:up --filter=web",
    "db:logs": "turbo run db:logs --filter=web",
    "db:generate": "turbo run db:generate --filter=web",
    "db:migrate": "turbo run db:migrate --filter=web",
    "db:studio": "turbo run db:studio --filter=web"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "sherif": "^1.6.1",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.3.1"
}
