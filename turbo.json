{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "gateway:up",
        "db:up",
        "db:migrate",
        "^dev"
      ]
    },
    "dev:with-logs": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "gateway:up",
        "db:up",
        "db:migrate"
      ],
      "with": [
        "db:logs"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".output/**",
        "dist/**",
        "build/**"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "lint:fix": {
      "cache": false
    },
    "format": {
      "dependsOn": [
        "^format"
      ]
    },
    "format:fix": {
      "cache": false
    },
    "check": {
      "dependsOn": [
        "^check"
      ]
    },
    "db:up": {
      "cache": false
    },
    "db:logs": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "dependsOn": [
        "db:up"
      ]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "gateway:up": {
      "cache": false
    }
  }
}
